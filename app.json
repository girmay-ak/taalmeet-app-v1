{
  "expo": {
    "name": "TAALMEET",
    "slug": "taalmeet-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "scheme": "taalmeet",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.taalmeet.app",
      "config": {
        "googleMapsApiKey": "AIzaSyCJlhCsal8nx2Gj3VRgrQ6zQ7JLNSJbpRA"
      },
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "TAALMEET uses your location to find nearby language exchange partners.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "TAALMEET uses your location to find nearby language exchange partners.",
        "NSPhotoLibraryUsageDescription": "TAALMEET needs access to your photo library to upload profile pictures.",
        "NSPhotoLibraryAddUsageDescription": "TAALMEET needs access to save photos to your library.",
        "GMSApiKey": "AIzaSyCJlhCsal8nx2Gj3VRgrQ6zQ7JLNSJbpRA"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.taalmeet.app",
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyCJlhCsal8nx2Gj3VRgrQ6zQ7JLNSJbpRA"
        }
      },
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "READ_EXTERNAL_STORAGE",
        "READ_MEDIA_IMAGES"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow TAALMEET to use your location to find nearby language exchange partners."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "TAALMEET needs access to your photos to upload profile pictures.",
          "cameraPermission": "TAALMEET needs access to your camera to take profile pictures."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#1DB954"
        }
      ],
      "@rnmapbox/maps",
      "expo-asset"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "your-eas-project-id"
      }
    }
  }
}
